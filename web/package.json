{
  "name": "shopify-app-template-node",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "cd api-gateway && pnpm run start:dev",
    "start:dev": "cd api-gateway && pnpm run start:dev",
    "dev:auth": "cd auth && pnpm run start:dev",
    "dev:app": "cd app && pnpm run start:dev",
    "dev:webhook": "cd webhook && pnpm run start:dev",
    "dev:shopify": "cd shopify && pnpm run start:dev",
    "dev:gateway": "cd api-gateway && pnpm run start:dev",
    "dev:all": "concurrently --names \"AUTH,APP,WEBHOOK,SHOPIFY,GATEWAY\" -c \"blue,green,yellow,magenta,cyan\" \"pnpm run dev:auth\" \"pnpm run dev:app\" \"pnpm run dev:webhook\" \"pnpm run dev:shopify\" \"pnpm run dev:gateway\"",
    "build": "pnpm run build:all",
    "build:all": "pnpm run build:auth && pnpm run build:app && pnpm run build:webhook && pnpm run build:shopify && pnpm run build:gateway",
    "build:auth": "cd auth && pnpm run build",
    "build:app": "cd app && pnpm run build",
    "build:webhook": "cd webhook && pnpm run build",
    "build:shopify": "cd shopify && pnpm run build",
    "build:gateway": "cd api-gateway && pnpm run build",
    "start:prod": "cd api-gateway && pnpm run start:prod",
    "serve": "pnpm run start:prod"
  },
  "type": "module",
  "engines": {
    "node": ">=16.13.0"
  },
  "dependencies": {
    "concurrently": "^8.0.0"
  },
  "devDependencies": {
    "prettier": "^2.6.2"
  }
}
